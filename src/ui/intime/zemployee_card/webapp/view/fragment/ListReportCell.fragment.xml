                         xmlns:smartForm="sap.ui.comp.smartform"
                         xmlns:f="sap.ui.layout.form"
                         xmlns="sap.m">

                            <HBox>
                                   <VBox>
                                          <Text text="{ path:'PositionTime', 
                                                  formatter: '.formatter.TimeSpentFormatter' }"/>
                                   </VBox>
                            </HBox>
                            <HBox>
                                   <VBox>
                                          <Text text="{ parts: [{path:'VacationStartDate'},{path:'VacationEndDate'}], 
                                                  formatter: '.formatter.timestampDDMM_DDMMFormatter' }"/>
                                   </VBox>
                            </HBox>
                            <HBox>
                                   <VBox>
                                          <Text text="{ parts: [{path:'SickLeaveStartDate'},{path:'SickLeaveEndDate'}], 
                                                  formatter: '.formatter.timestampDDMM_DDMMFormatter' }"/>
                                   </VBox>
                            </HBox>
</core:FragmentDefinition>