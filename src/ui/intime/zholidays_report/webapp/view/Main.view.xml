<mvc:View controllerName="intime.zholiday_report.controller.App"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:unified="sap.ui.unified"
	xmlns:l="sap.ui.layout"
	xmlns:sv="sap.ui.comp.smartvariants"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:smartField="sap.ui.comp.smartfield">
	
	<VBox height="100%">
					<ScrollContainer
						height="100%"
						width="100%"
						vertical="true"
						focusable="false">
			<smartFilterBar:SmartFilterBar id="smartFilterBar"
						entitySet="UserSet"
						enableBasicSearch="false"
						search="onSearch" />
            
				<smartTable:SmartTable id="smartTable"
					entitySet="UserSet"
					visible="false"
					smartFilterId="smartFilterBar"
					tableType="Table"
					useExportToExcel="true"
					useVariantManagement="false"
					useTablePersonalisation="true"
					header="Line Items"
					showRowCount="true">
				</smartTable:SmartTable>

				<content>
				<PlanningCalendar id="PC1"
					rows="{/UserSet}"
					viewKey="nonWorking"
					appointmentsVisualization="Filled"
					appointmentSelect="handleAppointmentSelect"
					showEmptyIntervalHeaders="false"
					stickyHeader="true"
					showWeekNumbers="true">
				
					<views>
						<PlanningCalendarView id="quarter"
							key="nonWorking"
							intervalType="Month"
							description="quarter view"
							intervalsS="1"
							intervalsM="3"
							intervalsL="3">
						</PlanningCalendarView>
					</views>
					<rows>
						<PlanningCalendarRow title="{UserName}"
							text="{PositionText}"
							appointments="{path: 'toHolidays', templateShareable: false}">
							<appointments>
								<unified:CalendarAppointment startDate="{StartDate}"
									endDate="{EndDate}"
									icon="{ImgUrl}"
									title="{UserName}"
									text="{PositionText}"
									type="Type01">
								</unified:CalendarAppointment>
							</appointments>
						</PlanningCalendarRow>
					</rows>
				</PlanningCalendar>
				</content>
		</ScrollContainer>
	</VBox>
</mvc:View>
