<mvc:View controllerName="intime.zholiday_report.controller.App"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:unified="sap.ui.unified"
	xmlns="sap.m">
	<VBox class="sapUiSmallMargin">


		<smartFilterBar:SmartFilterBar id="smartFilterBar"
			entitySet="UserSet"
			enableBasicSearch="false"
			search="onSearch"/>

		<smartTable:SmartTable id="smartTable"
			entitySet="UserSet"
			visible="false"
			smartFilterId="smartFilterBar"
			tableType="Table"
			useExportToExcel="true"
			useVariantManagement="false"
			enableAutoBinding='true'
			useTablePersonalisation="true"
			header="Line Items"
			showRowCount="true">
		</smartTable:SmartTable>
		<!-- startDate="path: .getFirstDateOnCurrentQuarter" -->
		<PlanningCalendar id="PC1"
			viewKey="nonWorking"
			rows="{ path: '/UserSet'}"
			appointmentsVisualization="Filled"
			appointmentSelect="handleAppointmentSelect"
			showEmptyIntervalHeaders="false"
			stickyHeader="true"
			showWeekNumbers="true">
			<views>
				<PlanningCalendarView
				id="quarter"
					key="nonWorking"
					intervalType="Month"
					description="quarter view"
					intervalsS="1"
					intervalsM="3"
					intervalsL="3">
				</PlanningCalendarView>
			</views>
			<rows>
				<PlanningCalendarRow 
					icon="{ImgUrl}"
					title="{UserName}"
					text="{Label}"
					appointments="{path: 'toHolidays', templateShareable:true}">

					<appointments>
						<unified:CalendarAppointment  startDate="{StartDate}"
							endDate="{EndDate}"
							title="{TypeText}"
							text="тест"
							type="Type01">
						</unified:CalendarAppointment>
					</appointments>
				</PlanningCalendarRow>
			</rows>
		</PlanningCalendar>
	</VBox>
	
</mvc:View>