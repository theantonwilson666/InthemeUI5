<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myPopover"
		title="{TypeText}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">

		<VBox items="{./UserCrossing}">
			<Text text="{CrossingUserID}"/>
		</VBox>

		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="close"
					text="Close"
					press="handleClosePress" />
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>
