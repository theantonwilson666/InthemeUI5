<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myPopover"
		title="{TypeText}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">
<content>
		<Table id="idProductsTable"
			inset="false"
			width="100%"
			items="{./UserCrossing}">
			
		<columns>
			<Column
				width="12em">
				<Text text="Crossing User Name" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Start Date -> End Date" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Position + branch" />
			</Column>
		</columns>	
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Text
						text="{CrossingUserName}"/>
						
					<Text
						text="{path: 'StartDate', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true} } - {path: 'EndDate', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true} }"/>
				
					<ObjectIdentifier
						title="{BranchText}"
						text="{PosiitionText}"/>
		
				</cells>
			</ColumnListItem>
		</items>
		</Table>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="close"
					text="Close"
					press="handleClosePress" />
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>
