<mvc:View controllerName="intime.zissues_workspace.controller.Detail"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:dnd="sap.ui.core.dnd"
    xmlns:dnd-grid="sap.f.dnd">


    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>

                    <ObjectIdentifier title="{Name}"
                        text="{ProjectStageName}({ProjectName})"
                        titleActive="false"/>
                </f:heading>

                <f:content>
                    <OverflowToolbar>
                    </OverflowToolbar>
                </f:content>

                <f:actions>
                    <Button text="Edit"
                        icon="sap-icon://edit"
                        type="Emphasized"
                        press="toggleAreaPriority">
                    </Button>
                </f:actions>

            </f:DynamicPageTitle>

        </f:title>

        <f:header>
            <f:DynamicPageHeader>

            </f:DynamicPageHeader>
        </f:header>

        <f:content>

            <IconTabBar id="taskIconTabBar"
                applyContentPadding="false"
                expanded="true"
                expandable="false"
                stretchContentHeight="true"
                tabDensityMode="Compact">
                <items>
                    <IconTabFilter id="taskTab"
                        text="Задача"
                        key="task">
                        <core:Fragment fragmentName="intime.zissues_workspace.view.taskSections.TaskInfo"
                            type="XML" />
                    </IconTabFilter>
                    <IconTabFilter id="taskChangeDocTab"
                        text="История изменений"
                        key="changeDocuments">
                        <core:Fragment fragmentName="intime.zissues_workspace.view.taskSections.TaskDocumentChange"
                            type="XML" />
                    </IconTabFilter>

                    <IconTabFilter id="taskAttachments"
                        text="Вложения"
                        key="attachments">
                        <core:Fragment fragmentName="intime.zissues_workspace.view.taskSections.TaskAttachments"
                            type="XML" />
                    </IconTabFilter>

                </items>
            </IconTabBar>



        </f:content>
        <f:footer>
            <OverflowToolbar>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>

</mvc:View>