<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:m="sap.m">
    <Dialog id="_PartnerAdmin-Dialog"
        title="Админы - {PartnerName}"
        contentWidth="30%">
        <content>

            <Table id="_PartnerAdmins-Table"
                items="{to_Admins}">
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <ToolbarSpacer/>
                            <Button icon="sap-icon://add"
                                press="onPartnerAdminAddPress"
                                enabled="{control>/edit}"/>
                            <Button icon="sap-icon://edit"
                                press="onPartnerAdminEditPress"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="12em">
                        <Text text="{/#ZSNN_PARTNER_ADMINType/Username/@sap:label}" />
                    </Column>

                    <Column width="7em">
                        <Text text="{/#ZSNN_PARTNER_ADMINType/CreateEnabled/@sap:label}" />
                    </Column>

                    <Column width="7em">
                        <Text text="{/#ZSNN_PARTNER_ADMINType/UpdateEnabled/@sap:label}" />
                    </Column>

                    <Column width="7em">
                        <Text text="{/#ZSNN_PARTNER_ADMINType/DeleteEnabled/@sap:label}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle"
                        id="_PartnerAdmins-ColumnListItem">
                        <cells>
                            <smartField:SmartField value="{Username}" />

                            <Switch state="{CreateEnabled}"
                                type="AcceptReject"
                                enabled="{control>/edit}"/>
                            <Switch state="{UpdateEnabled}"
                                type="AcceptReject"
                                enabled="{control>/edit}"/>
                            <Switch state="{DeleteEnabled}"
                                type="AcceptReject"
                                enabled="{control>/edit}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <beginButton>
            <Button id="beginBtn"
                text="Сохранить"
                type="Emphasized"
                press=".onOkPartnerDialog"/>
        </beginButton>
        <endButton>
            <Button id="endBtn"
                text="Отменить"
                press=".onCancelPartnerDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>