<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:m="sap.m">
    <Dialog
        contentWidth="30%">
        <content>
            <Table>
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <ToolbarSpacer/>
                            <Button icon="sap-icon://add"
                                press=".onAddPress"
                                enabled="{control>/edit}"/>
                            <Button icon="sap-icon://edit"
                                press="onEditPress"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="12em">
                        <Text text="Пользователь" />
                    </Column>

                    <Column width="7em">
                        <Text text="Создание" />
                    </Column>

                    <Column width="7em">
                        <Text text="Изменение" />
                    </Column>

                    <Column width="7em">
                        <Text text="Удаление" />
                    </Column>
                </columns>
            </Table>
        </content>
        <beginButton>
            <Button id="beginBtn"
                text="Ок"
                type="Emphasized"
                press=".onOkButtonPress"/>
        </beginButton>
        <endButton>
            <Button id="endBtn"
                text="Отменить"
                press=".onCancelButtonPress"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>