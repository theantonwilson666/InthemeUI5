<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform">
    <Dialog contentWidth="50%" title="{i18n>newOrgTitle}">
        <!-- если не получится подгрузить данные, сделаю через controller -->
        <content>

            <smartForm:SmartForm id="smartForm" entityType="OrgHierarchy" editable="true">

                <smartForm:Group label="Data">
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{ParentOrgID}" />
                    </smartForm:GroupElement>

                    <smartForm:GroupElement>
                        <smartField:SmartField value="{OrgName}" />
                    </smartForm:GroupElement>


                </smartForm:Group>

            </smartForm:SmartForm>
        </content>
        <beginButton>
            <Button text="Создать" press="onCreateOrgSave"/>
        </beginButton>
        <endButton>
            <Button text="Выйти" press="onDialogCancelPress"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>