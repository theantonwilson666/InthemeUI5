<core:FragmentDefinition xmlns="sap.m"
                         xmlns:core="sap.ui.core"
                         xmlns:smartTable="sap.ui.comp.smarttable"
                         xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
                         xmlns:sv="sap.ui.comp.smartvariants"
                         xmlns:f="sap.f"
                         xmlns:table="sap.ui.table"
                         xmlns:smartForm="sap.ui.comp.smartform"
                         xmlns:unified="sap.ui.unified"
                         xmlns:dnd="sap.ui.core.dnd"
                         xmlns:smartField="sap.ui.comp.smartfield"
                         xmlns:l="sap.ui.layout">
    <VBox>
        <SinglePlanningCalendar id="planningScheduleCalendar"
                                fullDay="false"
                                headerDateSelect="onHeaderDateChange"
                                startDateChange="onHeaderDateChange"
                                enableAppointmentsDragAndDrop="true"
                                cellPress="onDayCalendayPress"
                                startDate="{path: 'scheduleData&gt;StartDate'}"
                                appointments="{path: 'scheduleData&gt;/Appointments'}">
            <views>
                <SinglePlanningCalendarMonthView key="MonthView"
                                                 title="Month" />
            </views>
            <appointments>
                <unified:CalendarAppointment title="{scheduleData&gt;Title}({resultData&gt;Text})"
                                             text="{scheduleData&gt;Text}"
                                             type="{scheduleData&gt;Type}"
                                             color="{scheduleData&gt;Color}"
                                             startDate="{scheduleData&gt;StartDate}"
                                             endDate="{scheduleData&gt;EndDate}" />
            </appointments>
        </SinglePlanningCalendar>
    </VBox>
</core:FragmentDefinition>